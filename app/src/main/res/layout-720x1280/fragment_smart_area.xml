<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<!--<android.support.v4.widget.SwipeRefreshLayout
		android:id="@+id/swipe"
		android:layout_width="match_parent"
		android:layout_height="match_parent">-->
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/smart_area"
		android:gravity="center"
		android:textSize="16sp"
		android:padding="5dp"
		android:textColor="@color/white"
		android:background="@color/app_base_color"
		/>

   <!--<ScrollView
       android:id="@+id/rl_smart_erea"
       android:layout_width="match_parent"
       android:layout_height="0px"
	   android:layout_weight="1"
	   >-->
	   <com.scwang.smartrefresh.layout.SmartRefreshLayout
		   android:layout_width="match_parent"
		   android:layout_height="match_parent"
		   android:id="@+id/smart_refresh_smart_area"
		   >
		   <com.scwang.smartrefresh.header.CircleHeader
			   android:layout_width="match_parent"
			   android:layout_height="150px" />

       <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

		   <com.youth.banner.Banner
			   xmlns:app="http://schemas.android.com/apk/res-auto"
			   android:id="@+id/banner"
			   android:layout_width="match_parent"
			   android:layout_height="550px" />

            <!-- 九宫格  -->
           <com.quhwa.cloudintercom.widget.AutoTableLayout
           		android:layout_width="match_parent"
           		android:layout_height="1060px"
           		android:shrinkColumns="0,1,2"
           		android:padding="3dp"
			    android:layout_marginTop="5px"
           >
           <com.quhwa.cloudintercom.widget.AutoTableRow
               android:layout_width="match_parent"
               android:layout_height="@dimen/smartarea_button_height"
               >
               <Button
                   android:id="@+id/btn_unlock"
                   android:layout_width="@dimen/smartarea_button_height"
                   android:layout_height="@dimen/smartarea_button_height"
                   android:background="@drawable/selector_btn_one"
                   android:text="@string/unlock"
                   android:gravity="center"
                   android:drawableTop="@drawable/ic_unlock"
                   android:padding="@dimen/smart_area_table_padding"
                   />
               <Button
                   android:id="@+id/btn_bind_device"
                   android:layout_width="@dimen/smartarea_button_height"
                   android:layout_height="@dimen/smartarea_button_height"
                   android:background="@drawable/selector_btn_two"
                   android:text="@string/bind_device"
                   android:gravity="center"
                   android:drawableTop="@drawable/ic_bind"
                   android:padding="@dimen/smart_area_table_padding"
                   />
               <Button
                   android:id="@+id/btn_monitor"
                   android:layout_width="@dimen/smartarea_button_height"
                   android:layout_height="@dimen/smartarea_button_height"
                   android:background="@drawable/selector_btn_three"
                   android:text="@string/monitor"
                   android:gravity="center"
                   android:drawableTop="@drawable/ic_monitor"
                   android:padding="@dimen/smart_area_table_padding"
                   />
           </com.quhwa.cloudintercom.widget.AutoTableRow>
           <com.quhwa.cloudintercom.widget.AutoTableRow
               android:layout_width="match_parent"
			   android:layout_height="@dimen/smartarea_button_height"
               >
               <Button
                   android:id="@+id/btn_door_to_door"
                   android:layout_width="@dimen/smartarea_button_height"
                   android:layout_height="@dimen/smartarea_button_height"
                   android:background="@drawable/selector_btn_four"
                   android:text="@string/door_to_door"
                   android:gravity="center"
                   android:drawableTop="@drawable/ic_visitor_password"
                   android:padding="@dimen/smart_area_table_padding"
                   />
               <Button
                   android:id="@+id/btn_record"
                   android:layout_width="@dimen/smartarea_button_height"
                   android:layout_height="@dimen/smartarea_button_height"
                   android:background="@drawable/selector_btn_five"
                   android:text="@string/record"
                   android:gravity="center"
                   android:drawableTop="@drawable/ic_open_door_record"
                   android:padding="@dimen/smart_area_table_padding"
                   />
               <Button
                   android:id="@+id/btn_contact_manager"
                   android:layout_width="@dimen/smartarea_button_height"
                   android:layout_height="@dimen/smartarea_button_height"
                   android:background="@drawable/selector_btn_six"
                   android:text="@string/contact_manager"
                   android:gravity="center"
                   android:drawableTop="@drawable/ic_contact"
                   android:padding="@dimen/smart_area_table_padding"
                   />
           </com.quhwa.cloudintercom.widget.AutoTableRow>
           <com.quhwa.cloudintercom.widget.AutoTableRow
               android:layout_width="match_parent"
			   android:layout_height="@dimen/smartarea_button_height"
               >
			   <FrameLayout
				   android:layout_width="@dimen/smartarea_button_height"
				   android:layout_height="@dimen/smartarea_button_height"
				   >
					<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<Button
							android:id="@+id/btn_area_announcement"
							android:layout_width="@dimen/smartarea_button_height"
							android:layout_height="@dimen/smartarea_button_height"
							android:background="@drawable/selector_btn_seven"
							android:text="@string/area_announcement"
							android:gravity="center"
							android:drawableTop="@drawable/ic_area_adv"
							android:padding="@dimen/smart_area_table_padding"
							/>
					</RelativeLayout>
				   <TextView
					   android:id="@+id/tv_show_msg_new"
					   android:layout_width="22dp"
					   android:layout_height="22dp"
					   android:text="1"
					   android:textColor="@color/white"
					   android:layout_gravity="right"
					   android:background="@drawable/msg_bg"
					   android:gravity="center"
					   android:visibility="gone"
					   />
			   </FrameLayout>
               <Button
                   android:id="@+id/btn_server_for_people"
                   android:layout_width="@dimen/smartarea_button_height"
                   android:layout_height="@dimen/smartarea_button_height"
                    android:background="@drawable/selector_btn_eight"
                   android:text="@string/server_for_people"
                   android:gravity="center"
                   android:drawableTop="@drawable/ic_server_for_people"
                   android:padding="@dimen/smart_area_table_padding"
                   />
               <Button
                   android:id="@+id/btn_setting"
                   android:layout_width="@dimen/smartarea_button_height"
                   android:layout_height="@dimen/smartarea_button_height"
                   android:background="@drawable/selector_btn_nine"
                   android:text="@string/setting"
                   android:gravity="center"
                   android:drawableTop="@drawable/ic_setting"
                   android:padding="@dimen/smart_area_table_padding"
                   />
           </com.quhwa.cloudintercom.widget.AutoTableRow>
       </com.quhwa.cloudintercom.widget.AutoTableLayout>
        <!--  <ImageView
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:background="@drawable/main_status"
               /> -->
      </com.zhy.autolayout.AutoLinearLayout>
	   </com.scwang.smartrefresh.layout.SmartRefreshLayout>
   <!--</ScrollView>-->
	<!--</android.support.v4.widget.SwipeRefreshLayout>-->

</com.zhy.autolayout.AutoLinearLayout>
