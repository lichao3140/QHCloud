<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:clipToPadding="true"
	android:background="@color/app_base_color"
    tools:context="com.quhwa.cloudintercom.activity.RecordActivity" >
	<include 
	    layout="@layout/title_layout"
	    android:id="@+id/record_title"
	    />
	<View
		android:id="@+id/view_record"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"
		android:background="@color/white"
		></View>
	<LinearLayout
		android:id="@+id/ll_setting"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white">
	<TextView
	    android:id="@+id/tv_call_log"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/call_log"
	    android:textSize="18sp"
	    android:padding="10dp"
	    android:clickable="true"
	    android:background="@drawable/common2_button_bg"
	    />
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.1dp"
	    android:background="@color/gray"
	    />
	<TextView 
	    android:id="@+id/tv_open_door_log"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/door_record"
	    android:textSize="18sp"
	    android:padding="10dp"
	    android:clickable="true"
	    android:background="@drawable/common2_button_bg"
	    />
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.1dp"
	    android:background="@color/gray"
	    />
	</LinearLayout>
</LinearLayout>
